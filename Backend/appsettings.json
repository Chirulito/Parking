{
    // Configures microsoft logs for console.
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            // Only warning information to not overflow console with information.
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // Configures the application to allow requests from anyone.
    "AllowedHosts": "*",

    // Configures string connections to database.
    "ConnectionStrings": {
        "Database-Esteban": "Server=localhost;Database=Database;Integrated Security=True;TrustServerCertificate=True;",
        "Database-Jus": "Server=localhost;Database=parqueo;Integrated Security=True;TrustServerCertificate=True;",
        "Database-2": "Server=localhost;Database=Database;Integrated Security=True;TrustServerCertificate=True;"
    },

    // Configures the application to allow maximum 3 requests per minute to the login endpoint.
    "IpRateLimiting": {
        "EnableEndpointRateLimiting": true,
        "StackBlockedRequests": false,
        "HttpStatusCode": 429,
        "GeneralRules": [
            {
                "Endpoint": "POST:/api/Credential/.login",
                "Period": "1m",
                "Limit": 3
            }
        ]
    }
}
